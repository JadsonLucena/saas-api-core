{
  "name": "api-core",
  "version": "1.0.0",
  "description": "Get an API with the features you need to develop any service",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "start:dev": "node --trace-warnings --env-file=.env --experimental-strip-types --watch ./src/index.ts",
    "start": "node --trace-warnings --experimental-strip-types ./src/index.ts",
    "test": "node --env-file=.env --test --experimental-strip-types test/**/*.test.ts",
    "pretest:E2E": "openssl req -new -newkey rsa:4096 -x509 -sha256 -days 1 -nodes -out ./Cert.pem -keyout ./Key.pem -subj '/C=UA/ST=Some-State/L=/O=Internet Widgits Pty Ltd/OU=/CN=' > /dev/null 2>&1 && docker-compose --env-file=.env up -d --build && rm -f ./Cert.pem ./Key.pem",
    "posttest:E2E": "docker-compose down -v",
    "test:E2E": "NODE_TLS_REJECT_UNAUTHORIZED=0 node --env-file=.env --experimental-strip-types --test test/E2E/**/*.test.ts",
    "test:coverage": "node --env-file=.env --experimental-strip-types --test --experimental-test-coverage test/E2E/**/*.test.ts",
    "lint": "eslint --flag unstable_ts_config .",
    "lint:fix": "eslint --flag unstable_ts_config . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JadsonLucena/api-core.git"
  },
  "keywords": [
    "api",
    "http",
    "http2",
    "rest",
    "soap",
    "graphql",
    "grpc"
  ],
  "author": "JadsonLucena",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JadsonLucena/api-core/issues"
  },
  "homepage": "https://github.com/JadsonLucena/api-core#readme",
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "latest",
    "@aws-sdk/credential-providers": "latest",
    "@azure/identity": "latest",
    "@azure/keyvault-secrets": "latest",
    "@fastify/multipart": "latest",
    "@fastify/static": "latest",
    "@google-cloud/secret-manager": "latest",
    "fastify": "latest",
    "jsonwebtoken": "latest",
    "redis": "latest"
  },
  "devDependencies": {
    "@eslint/js": "latest",
    "@types/eslint-plugin-security": "latest",
    "@types/node": "latest",
    "eslint-plugin-security": "latest",
    "jiti": "latest",
    "typescript-eslint": "latest"
  }
}
